<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Listing details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing_image" />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          <%= listing.description %>
          <br />
          <i class="fa-solid fa-indian-rupee-sign"></i><%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
          <br />
          <%= listing.location %>
          <br />
          <%= listing.country %>
        </p>
      </div>
    </div>

    <div class="btns"><a href="/listings/<%= listing._id %>/edit" class=" edit-btn mb-3 btn btn-dark col-1 offset-3">Edit</a>
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark mb-3  offset-5">Delete</button>
      </form>
    
  </div>
</body>
