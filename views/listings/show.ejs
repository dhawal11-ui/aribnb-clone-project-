<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="Listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b>
        <br />
        <%= listing.description %>
        <br />
        <i class="fa-solid fa-indian-rupee-sign"></i><%= listing.price ?
        listing.price.toLocaleString("en-IN") : "N/A" %>
        <br />
        <%= listing.location %>
        <br />
        <%= listing.country %>
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="edit-btn mb-3 btn btn-dark col-1 offset-3"
      >Edit</a
    >
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
      <button class="btn btn-dark mb-3 offset-5">Delete</button>
    </form>
  </div>
  <div class="col-8 offset-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
          step="1"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label class="form-label" for="comment">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
        <!-- to show error is comment not added and the above is the error msg -->
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>
